<div class="modal fade" tabindex="-1" id="kt_mdl_trimestre">
    <div class="modal-dialog ">
        <div class="modal-content shadow-none">
            <div class="modal-header">
                <h5 class="modal-title">Trimestre</h5>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal"
                     aria-label="Close">
                    <i class="bi bi-x fs-3x"></i>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">
                <form class="row g-3"
                      name="form_trimestre"
                      id="form_trimestre">
                    <div class="col-sm-12 col-md-6">
                        <label class="input-group-text "
                                for="codtrimestre">#</label>
                        <input type="number" name="codtrimestre" readonly id="codtrimestre" class="form-control"
                               value="0">

                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label class="input-group-text required" for="datfechat">Fecha</label>
                        <input type="date" id="datfechat"
                               class="form-control"
                               name="datfecha">
                    </div>
                    <div class="col-sm-12 col-md-12">
                        <label class="input-group-text" for="codproyectot"><span
                                    class="required">Proyecto</span></label>
                        <select class="form-select form-select-lg"
                                name="codproyecto"
                                data-dropdown-parent="#kt_mdl_trimestre"
                                data-placeholder="Proyecto"
                                required
                                id="codproyectot">
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-12">
                        <label class="input-group-text" for="codsocio"><span
                                    class="required">Socio</span></label>
                        <select class="form-select form-select-lg"
                                name="codsocio"
                                data-dropdown-parent="#kt_mdl_trimestre"
                                data-placeholder="Socio"
                                required
                                id="codsocio">
                        </select>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-check form-switch form-check-custom form-check-solid">
                            <label class="form-check-label required " for="codestado">
                                Estado
                            </label>
                            <input class="form-check-input" type="checkbox" value="1" id="codestado" name="codestado" checked="checked" />
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <button type="submit" id="btn_save_trimestre"
                                class="btn btn-primary col-sm-12 w-full">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-save" viewBox="0 0 16 16">
                                <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1z"/>
                            </svg>
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
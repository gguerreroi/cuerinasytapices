<div class="modal fade" tabindex="-1" id="kt_mdl_tipocambio">
    <div class="modal-dialog ">
        <div class="modal-content shadow-none">
            <div class="modal-header">
                <h5 class="modal-title">Tipo de cambio</h5>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal"
                     aria-label="Close">
                    <i class="bi bi-x fs-3x"></i>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">
                <form class="row g-3"
                      name="form_tipocambio"
                      id="form_tipocambio">
                    <div class="col-sm-12 col-md-6">
                        <label class="input-group-text "
                                for="codtipocambio">#</label>
                        <input type="number" name="codtipocambio" readonly id="codtipocambio" class="form-control"
                               value="0">

                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label class="input-group-text required" for="datfecha">Fecha</label>
                        <input type="date" id="datfecha"
                               class="form-control"
                               name="datfecha">
                    </div>
                    <div class="col-sm-12 col-md-12">
                        <label class="input-group-text" for="codproyecto"><span
                                    class="required">Proyecto</span></label>
                        <select class="form-select form-select-lg"
                                name="codproyecto"
                                data-dropdown-parent="#kt_mdl_tipocambio"
                                data-placeholder="Proyecto"
                                required
                                id="codproyecto">
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label class="input-group-text" for="codmoneda_local"><span
                                    class="required">Moneda Origen</span></label>
                        <select class="form-select form-select-lg"
                                name="codmoneda_local"
                                data-dropdown-parent="#kt_mdl_tipocambio"
                                data-placeholder="Moneda Origen"
                                required
                                id="codmoneda_local">
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label class="input-group-text" for="codmoneda_destino"><span
                                    class="required">Moneda Destino</span></label>
                        <select class="form-select form-select-lg"
                                name="codmoneda_destino"
                                data-dropdown-parent="#kt_mdl_tipocambio"
                                data-placeholder="Moneda Destino"
                                required
                                id="codmoneda_destino">
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-12">
                        <div class="form-floating">
                            <input type="number" id="dbtipocambio"
                                   value="0.00"
                                   step="0.01"
                                   class="form-control "
                                   name="dbtipocambio">
                            <label class="label fw-bold required" for="dbtipocambio">Tasa</label>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <button type="submit" id="btn_save_tipocambio"
                                class="btn btn-primary col-sm-12 w-full">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-save" viewBox="0 0 16 16">
                                <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1z"/>
                            </svg>
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
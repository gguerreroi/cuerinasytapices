<div class="modal fade" tabindex="-1" id="kt_modal">
    <div class="modal-dialog ">
        <div class="modal-content shadow-none">
            <div class="modal-header">
                <h5 class="modal-title">Personas</h5>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal"
                     aria-label="Close">
                    <i class="bi bi-x fs-3x"></i>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">
                <form class="row g-3"
                      name="form_persona"
                      id="form_persona">
                        <div class="col-sm-12">
                            <div class="form-floating">
                                <input type="number" name="codpersona" readonly id="codpersona" class="form-control" value="0">
                                <label for="codpersona">#</label>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-floating">
                                <input class="form-control text-uppercase"
                                       id="strnombres"
                                       name="strnombres">
                                <label for="strnombres"><span class="required">Nombres</span></label>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-floating">
                                <input type="text" name="strapellidos"
                                id="strapellidos"
                                class="form-control text-uppercase">
                                <label for="strapellidos" class="required">Apellidos</label>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label class="input-group-text" for="fanionac">AÃ±o nacimiento</label>
                            <input type="number" id="fanionac"
                                   required
                                   min="1900" max="<%- new Date().getFullYear() %>" step="1"
                                   class="form-control"
                                   name="fanionac">
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label class="input-group-text" for="codgenero"><span class="required">Genero</span></label>
                            <select class="form-control" name="codgenero" id="codgenero">
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label class="input-group-text" for="codcomunidadlinguistica"><span class="required">Comunidad Linguistica</span></label>
                            <select class="form-select form-select-lg"
                                    name="codcomunidadlinguistica"
                                    data-dropdown-parent="#kt_modal"
                                    data-placeholder="Comunidad"
                                    required
                                    id="codcomunidadlinguistica">
                            </select>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label class="input-group-text" for="codorganizaciones"><span class="required">Organizaciones</span></label>
                            <select class="form-select form-select-lg"
                                    name="codorganizaciones"
                                    data-dropdown-parent="#kt_modal"
                                    data-placeholder="Organizacion"
                                    multiple
                                    required
                                    id="codorganizaciones" >
                            </select>
                        </div>
                    <div class="col-sm-12 col-md-12">
                        <label for="codproyecto" class="input-group-text">Proyectos</label>
                        <select name="codproyecto" id="codproyecto"
                                class="form-select form-select-lg"
                                data-dropdown-parent="#kt_modal"
                                data-placeholder="Proyecto"
                                multiple
                                required >
                        </select>
                    </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-floating">
                                <input type="tel" id="numcelular"
                                       class="form-control form-control"
                                       name="numcelular">
                                <label class="label fw-bold" for="numcelular">Celular</label>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-floating">
                                <input type="email" id="email"
                                       class="form-control form-control"
                                       name="email">
                                <label class="label fw-bold" for="email">Email</label>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <button type="submit"
                                    class="btn btn-primary col-sm-12 w-full" id="kt_submit_pearson">
                                <span class="indicator-label">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-save" viewBox="0 0 16 16">
                                    <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1z"/>
                                </svg>
                                Guardar Persona
                                </span>
                                <span class="indicator-progress">Por favor espere...
										<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                        </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
<script>
    const url = `${window.location.origin}/api`;
    var tbrubroscapacitacion
    var sToast = null;
    const nuevoButton = document.querySelector('#kt_nuevo')

    sToast = Swal.mixin({
        toast: true,
        position: "top-end",
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
        }
    });
/**/
    function fnToast(res) {
        const {code, message} = res

        if (code == undefined) {
            console.error(res)
            throw 'Formato invalido'
        }
        sToast.fire({
            icon: code == 'true' ? 'success' : 'error',
            title: message
        })
    }

    function delrubroscapacitacion(id) {
        Swal.fire({
            text: "¿Esta seguro que desea eliminar el rubro de capacitación?",
            showCancelButton: true,
            icon: "warning",
            buttonsStyling: false,
            confirmButtonText: "Eliminar",
            cancelButtonText: "Cancelar",
            customClass: {
                confirmButton: "order-2 btn btn-danger",
                cancelButton: "order-1 btn btn-light"
            }
        }).then(function (button) {
            if (button.isConfirmed) {
                $.ajax({
                    url: `${url}/catalogo/retornados.rubroscapacitacion/codrubrocapacitacion/${id}`,
                    type: 'delete'
                }).done(function (request) {
                    console.log(request)
                    sToast.fire({
                        icon: "success",
                        title: "Registro Eliminado"
                    })
                    tbrubroscapacitacion.ajax.reload(null, false);
                }).fail(function (reason) {
                    console.log(reason)
                    sToast.fire({
                        icon: "error",
                        title: "Se produjo un error"
                    })
                })
            }
        })
    }
     function editarrubroscapacitacion(id){
            console.log('codrubrocapacitacion', id)
            $.ajax({ 
                    url: url + '/catalogo/view/retornados.rubroscapacitacion/codrubrocapacitacion/' + id
            }).done(function(result){
                console.log(result.data[0])
                const {
                    codrubrocapacitacion, 
                    strrubrocap, 
                   
                    codestado
                } = result.data[0]

                $("#codrubrocapacitacion").val(codrubrocapacitacion)
                $("#strrubrocap").val(strrubrocap)
             
                $("#codestado").prop("checked", codestado)
              $("#kt_modal_rubroscapacitacion").modal('show');

            }).fail(function(reason){
                console.log(reason)
            })


    }

    document.addEventListener("DOMContentLoaded", function () {

        function search_table(event){
            tbrubroscapacitacion.search(event.target.value).draw();
        }

        let filterSearch = document.querySelector('[data-kt-filter="search"]');
        filterSearch.addEventListener('keyup', search_table);


        tbrubroscapacitacion = $('#tb-rubroscapacitacion').DataTable({
            search: true,
            ajax: `${url}/catalogo/view/retornados.rubroscapacitacion`,
            columns: [
                {data: "codrubrocapacitacion"},
                {data: "strrubrocap"},
                {data: "codestado"},
                {data: null}
            ],
            columnDefs: [{
                targets: [0],
                render: function (data, type, row) {
                    return `<button class="btn btn-light-primary hover-scale btn-icon btn-circle" onclick="editarrubroscapacitacion('${data}')">${data}</button>`
       
                }
            }, {
                targets: [2],
                render: function (data, type, row) {
                    let strestado = "OCULTO"
                    let color = "badge-light-danger"

                    if (data) {
                        strestado = "VISIBLE"
                        color = "badge-light-success"
                    }

                    return `<span class="badge badge-pill ${color}">${strestado}</span>`
                }
            }, {
                targets: [3],
                render: function (data, type, row) {
                    return `<button class="btn btn-icon btn-circle btn-light-danger"
onclick="delrubroscapacitacion('${row.codrubrocapacitacion}')"><i class="bi bi-trash"></i></button>`
                }
            }
            ],
            order: [[0, 'asc']]
        });

        $("#frm-rubroscapacitacion").submit(function (e) {
            e.preventDefault()

             let codrubrocapacitacion = document.getElementById('codrubrocapacitacion').value
            console.log('codrubrocapacitacion', codrubrocapacitacion)
            let metodo="post";
            if (codrubrocapacitacion != 0 )
                metodo = "put";

            nuevoButton.setAttribute('data-kt-indicator', 'on')
            nuevoButton.disabled = true
            $.ajax({
                url: `${url}/catalogo/deportados/rubroscapacitacion/${codrubrocapacitacion}`,
                type:metodo,
                data: $("#frm-rubroscapacitacion").serializeArray()
            }).done(function (result) {
                tbrubroscapacitacion.ajax.reload(null, false);
                $("#kt_modal_rubroscapacitacion").modal('hide')
                $("#frm-rubroscapacitacion").trigger("reset")
            }).fail(fnToast).always(function () {
                nuevoButton.removeAttribute('data-kt-indicator');
                nuevoButton.disabled = false;
            })
        })
    })

</script>

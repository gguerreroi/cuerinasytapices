<script src="assets/js/custom/widgets.js"></script>

<script>
    const url = `${window.location.origin}/api`;
    var btnSaveForm = null;
    var tbsocio = null;
    var sToast = null;
    var codmunicipio = $("#codmunicipio")
    var buttonModalSocio = $("#btn_modal_socio")

    var modalSocio = $("#kt_modal_socio")
    var formModal = $("#frm-socio")
    var inputCodSocio = document.getElementById('codsocio')

    function setDataForm(codsocio){
        $.ajax({
            url: `${url}/catalogo/view/poa.socio/codsocio/${codsocio}`,
        }).done(function(result){
            const {
                codsocio,
                strsocio,
                strsiglas,
                codmunicipio,
                codcommcare,
                codestado
            } = result.data[0]
            $("#codsocio").val(codsocio)
            $("#strsocio").val(strsocio)
            $("#strsiglas").val(strsiglas)
            $("#codmunicipio").val(codmunicipio).trigger('change')
            $("#codcommcare").val(codcommcare)
            $("#codestado").prop("checked", codestado)
            modalSocio.modal('show');
        }).fail(function(reason){
            console.log('error', reason)
        })
    }

    function openModalSocio(codsocio){
        formModal.trigger('reset')
        inputCodSocio.value = codsocio
        if (codsocio != "0")
            return setDataForm(codsocio)
        modalSocio.modal('show')
    }

    buttonModalSocio.on('click', function(){
        openModalSocio('0');
    })

    $.ajax({
        url: `${url}/catalogo/select2/geografica.vw_deptmun/codmunicipio/strmunicipio`,
        type: 'get'
    }).done(function (result){
        codmunicipio.select2({
            data: result.results,
            dropdownParent: modalSocio
        })
    }).fail(function(reason){
        console.log(reason)
        fnToast({code: 0, message: 'se produjo un error al cargar los municipios'})
    })

    sToast = Swal.mixin({
        toast: true,
        position: "top-end",
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
        }
    });

    function fnToast(res) {
        const {code, message} = res
        if (code == undefined) {
            console.error('error in fnToast', res)
            throw 'Formato invalido'
        }
        sToast.fire({
            icon: code == 'true' ? 'success' : 'error',
            title: message
        })
    }

    function delBase(message, path){
        Swal.fire({
            text: message,
            showCancelButton: true,
            icon: "warning",
            buttonsStyling: false,
            confirmButtonText: "Eliminar",
            cancelButtonText: "Cancelar",
            customClass: {
                confirmButton: "order-2 btn btn-danger",
                cancelButton: "order-1 btn btn-light"
            }
        }).then(function (action) {
            if (action.isConfirmed) {
                $.ajax({
                    url: `${url}/catalogo/${path}`,
                    type: 'delete'
                }).done(function (request) {
                    sToast.fire({
                        icon: "success",
                        title: "Registro Eliminado"
                    })
                    tbsocio.ajax.reload(null, false);
                }).fail(function (reason) {
                    console.log(reason)
                    sToast.fire({
                        icon: "error",
                        title: "Se produjo un error"
                    })
                })
            }
        })
    }

    function delSocio(id) {
        delBase('Â¿Esta seguro que desea eliminar el socio?',`poa.socio/codsocio/${id}`)
    }

    document.addEventListener("DOMContentLoaded", function () {
        btnSaveForm = document.querySelector('#kt_save')

        tbsocio = $("#tb-socio").DataTable({
            search: true,
            ajax: `${url}/catalogo/view/poa.vw_socio`,
            columns: [
                {data: "codsocio"},
                {data: "strsocio"},
                {data: "strsiglas"},
                {data: "strmunicipio"},
                {data: "codcommcare"},
                {data: "codestado"},
                {data: null}
            ],
            columnDefs: [{
                targets: [0],
                render: function(data, type, row){
                    return `<button class="btn btn-icon btn-circle btn-light-primary btn-hover-rise " onclick="openModalSocio('${data}')">${data}</button>`
                }
            },{
                targets: [5],
                render: function(data, type, row){
                    let strestado = "OCULTO"
                    let color = "badge-light-danger"

                    if (data) {
                        strestado = "VISIBLE"
                        color = "badge-light-success"
                    }
                    return `<span class="badge badge-pill ${color}">${strestado}</span>`
                }
            },{
                targets: [6],
                render: function(data, type, row){
                    return `<button class="btn btn-icon btn-circle btn-light-danger btn-hover-rotate-start " onclick="delSocio('${row.codsocio}')"><i class="bi bi-trash"></i></button>`
                }
            }]
        })

        function search_table(event){
            tbsocio.search(event.target.value).draw();
        }
        let filterSearch = document.querySelector('[data-kt-filter="search"]');
        filterSearch.addEventListener('keyup', search_table);

        formModal.submit(function(e){
            e.preventDefault()
            btnSaveForm.setAttribute('data-kt-indicator', 'on')
            btnSaveForm.disable = true
            $.ajax({
                url: `${url}/catalogo/poa/socio/${inputCodSocio.value}`,
                type: 'post',
                data: formModal.serializeArray()
            }).done(function(result){
                fnToast(result)
                tbsocio.ajax.reload(null, false)
                modalSocio.modal('hide')
                formModal.trigger('reset')
            }).fail(fnToast).always(function(){
                btnSaveForm.removeAttribute('data-kt-indicator')
                btnSaveForm.disable = false;
            })
        })
    })
</script>
